<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.jinyuze.flipdisplay.FlipCharView
        android:id="@+id/flip_char_view_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/flip_char_view_1_2"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.jinyuze.flipdisplay.FlipCharView
        android:id="@+id/flip_char_view_1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/flip_char_view_1_1"
        app:layout_constraintRight_toLeftOf="@id/flip_char_view_1_3"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.jinyuze.flipdisplay.FlipCharView
        android:id="@+id/flip_char_view_1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/flip_char_view_1_2"
        app:layout_constraintRight_toLeftOf="@id/flip_char_view_1_4"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.jinyuze.flipdisplay.FlipCharView
        android:id="@+id/flip_char_view_1_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/flip_char_view_1_3"
        app:layout_constraintRight_toLeftOf="@id/flip_char_view_1_5"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.jinyuze.flipdisplay.FlipCharView
        android:id="@+id/flip_char_view_1_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/flip_char_view_1_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>